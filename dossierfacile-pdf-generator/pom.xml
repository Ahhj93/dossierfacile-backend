<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.5.2</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>fr.dossierfacile.api</groupId>
	<artifactId>dossierfacile-pdf-generator</artifactId>
	<version>1.0.0</version>
	<name>dossierfacile-pdf-generator</name>
	<description>Api for generation of PDF documents for tenants</description>

	<properties>
		<java.version>11</java.version>
		<spring.boot.version>2.5.2</spring.boot.version>
		<spring.rabbit.test.version>2.3.9</spring.rabbit.test.version>
		<lombok.version>1.18.20</lombok.version>
		<gson.version>2.8.7</gson.version>

		<!--DossierFacile libraries-->
		<dossierfacile.common.version>0.0.1-SNAPSHOT</dossierfacile.common.version>

		<!--PDF generation libraries-->
		<jai.imageio.core.version>1.4.0</jai.imageio.core.version>
		<jai.imageio.jpeg2000.version>1.4.0</jai.imageio.jpeg2000.version>
		<jbig2.imageio.version>3.0.3</jbig2.imageio.version>
		<metadata.extractor.version>2.16.0</metadata.extractor.version>
		<pdfbox.tools.version>2.0.23</pdfbox.tools.version>
		<pdf2dom.version>2.0.0</pdf2dom.version>

		<!--Libraries needed for OVH storage-->
		<openstack4j.version>3.2.0</openstack4j.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-amqp</artifactId>
			<version>${spring.boot.version}</version>
		</dependency>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>${lombok.version}</version>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>${gson.version}</version>
		</dependency>

		<!--DossierFacile libraries-->
		<dependency>
			<groupId>fr.dossierfacile</groupId>
			<artifactId>dossierfacile-common-library</artifactId>
			<version>${dossierfacile.common.version}</version>
		</dependency>

		<!--PDF Generator-->
		<dependency>
			<groupId>com.drewnoakes</groupId>
			<artifactId>metadata-extractor</artifactId>
			<version>${metadata.extractor.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.pdfbox</groupId>
			<artifactId>pdfbox-tools</artifactId>
			<version>${pdfbox.tools.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.cssbox</groupId>
			<artifactId>pdf2dom</artifactId>
			<version>${pdf2dom.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.pdfbox</groupId>
			<artifactId>jbig2-imageio</artifactId>
			<version>${jbig2.imageio.version}</version>
		</dependency>
		<dependency>
			<groupId>com.github.jai-imageio</groupId>
			<artifactId>jai-imageio-core</artifactId>
			<version>${jai.imageio.core.version}</version>
		</dependency>
		<dependency>
			<groupId>com.github.jai-imageio</groupId>
			<artifactId>jai-imageio-jpeg2000</artifactId>
			<version>${jai.imageio.jpeg2000.version}</version>
		</dependency>

		<!--Libraries needed for OVH storage-->
		<dependency>
			<groupId>org.pacesys</groupId>
			<artifactId>openstack4j</artifactId>
			<version>${openstack4j.version}</version>
		</dependency>
		<dependency>
			<groupId>org.pacesys.openstack4j.connectors</groupId>
			<artifactId>openstack4j-okhttp</artifactId>
			<version>${openstack4j.version}</version>
		</dependency>

		<!--Dependencies for Tests-->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<version>${spring.boot.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.amqp</groupId>
			<artifactId>spring-rabbit-test</artifactId>
			<version>${spring.rabbit.test.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>dossier-facile-pdf-generator</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>${spring.boot.version}</version>
				<configuration>
					<excludes>
						<exclude>
							<groupId>org.projectlombok</groupId>
							<artifactId>lombok</artifactId>
						</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
